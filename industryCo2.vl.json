{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": {
      "expr": "'Co2 Emisison per Industries in ' + Year_Selector + ' (tonnes)'"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/LongNHDoan/Project-2/main/Industry_Annual_Co2.csv"
  },
  "params": [
    {
      "name": "Year_Selector",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1900,
        "max": 2019,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "hconcat": [
    {
      "layer": [
        {
          "mark": {
            "type": "arc",
            "innerRadius": 70
          },
          "transform": [
            {
              "filter": "year(datum.year) == Year_Selector"
            }
          ],
          "encoding": {
            "theta": {
              "field": "Co2 Emission",
              "type": "quantitative"
            },
            "color": {
              "field": "Type",
              "type": "nominal",
              "title": "Industry Name",
              "scale": {
                "range": [
                  "#F25F5C",
                  "#FFE066",
                  "#247BA0",
                  "#70C1B3"
                ]
              }
            },
            "tooltip": [
              {
                "field": "Co2 Emission",
                "type": "quantitative",
                "title": "Total C02 Emission"
              },
              {
                "field": "Type",
                "type": "nominal",
                "title": "Industry"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "aggregate": [
                {
                  "op": "sum",
                  "field": "Co2 Emission",
                  "as": "Total_Co2"
                }
              ],
              "groupby": [
                "year"
              ]
            },
            {
              "filter": "year(datum.year) == Year_Selector"
            },
            {
              "calculate": "'Total: '+ceil(datum.Total_Co2)",
              "as": "text_annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "center",
            "fontWeight": "bold",
            "fontSize": 16,
            "color": "grey"
          },
          "encoding": {
            "text": {
              "field": "text_annotation"
            }
          }
        }
      ]
    },
    {
      "width": 300,
      "height": 200,
      "transform": [
        {
          "filter": "year(datum.year) == Year_Selector"
        }
      ],
      "encoding": {
        "y": {
          "field": "Type",
          "type": "nominal",
          "title": "Industry",
          "axis": {
            "grid": false
          }
        },
        "x": {
          "field": "Co2 Emission",
          "type": "quantitative",
          "axis": {
            "grid": false
          }
        }
      },
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "color": {
              "field": "Type",
              "type": "nominal",
              "title": "Industry Name",
              "scale": {
                "range": [
                  "#F25F5C",
                  "#FFE066",
                  "#247BA0",
                  "#70C1B3"
                ]
              }
            },
            "tooltip": [
              {
                "field": "Co2 Emission",
                "type": "quantitative",
                "title": "Total C02 Emission"
              },
              {
                "field": "Type",
                "type": "nominal",
                "title": "Industry"
              }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 3,
            "color": "grey"
          },
          "encoding": {
            "text": {
              "field": "Co2 Emission",
              "type": "quantitative"
            }
          }
        }
      ]
    }
  ],
  "config": {
    "background": "#FFFFFF",
    "title": {
      "anchor": "start",
      "fontSize": 18,
      "font": "Lato"
    },
    "axisX": {
      "domain": true,
      "domainColor": "#000000",
      "domainWidth": 1,
      "grid": false,
      "labelFontSize": 12,
      "labelFont": "Lato",
      "labelAngle": 0,
      "tickColor": "#000000",
      "tickSize": 5,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato"
    },
    "axisY": {
      "domain": false,
      "domainWidth": 1,
      "grid": true,
      "gridColor": "#DEDDDD",
      "gridWidth": 1,
      "labelFontSize": 12,
      "labelFont": "Lato",
      "labelPadding": 8,
      "ticks": false,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato",
      "titleAngle": 0,
      "titleY": -10,
      "titleX": 18
    },
    "legend": {
      "labelFontSize": 12,
      "labelFont": "Lato",
      "symbolSize": 100,
      "titleFontSize": 12,
      "titlePadding": 10,
      "titleFont": "Lato",
      "orient": "right",
      "offset": 10
    },
    "view": {
      "stroke": "transparent"
    },
    "range": {
      "category": [
        "#1696d2",
        "#ec008b",
        "#fdbf11",
        "#000000",
        "#d2d2d2",
        "#55b748"
      ],
      "diverging": [
        "#ca5800",
        "#fdbf11",
        "#fdd870",
        "#fff2cf",
        "#cfe8f3",
        "#73bfe2",
        "#1696d2",
        "#0a4c6a"
      ],
      "heatmap": [
        "#ca5800",
        "#fdbf11",
        "#fdd870",
        "#fff2cf",
        "#cfe8f3",
        "#73bfe2",
        "#1696d2",
        "#0a4c6a"
      ],
      "ordinal": [
        "#cfe8f3",
        "#a2d4ec",
        "#73bfe2",
        "#46abdb",
        "#1696d2",
        "#12719e"
      ],
      "ramp": [
        "#CFE8F3",
        "#A2D4EC",
        "#73BFE2",
        "#46ABDB",
        "#1696D2",
        "#12719E",
        "#0A4C6A",
        "#062635"
      ]
    },
    "area": {
      "fill": "#1696d2"
    },
    "rect": {
      "fill": "#1696d2"
    },
    "line": {
      "color": "#1696d2",
      "stroke": "#1696d2",
      "strokeWidth": 5
    },
    "trail": {
      "color": "#1696d2",
      "stroke": "#1696d2",
      "strokeWidth": 0,
      "size": 1
    },
    "path": {
      "stroke": "#1696d2",
      "strokeWidth": 0.5
    },
    "point": {
      "filled": true
    },
    "text": {
      "font": "Lato",
      "color": "#1696d2",
      "fontSize": 11,
      "align": "center",
      "fontWeight": 400,
      "size": 11
    },
    "style": {
      "bar": {
        "fill": "#1696d2",
        "stroke": null
      }
    },
    "arc": {
      "fill": "#1696d2"
    },
    "shape": {
      "stroke": "#1696d2"
    },
    "symbol": {
      "fill": "#1696d2",
      "size": 30
    }
  }
}
}