{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 200,
  "title": "CO2 Emision by Industries (million tonnes)",
  "data": {
    "url": "https://raw.githubusercontent.com/LongNHDoan/Project-2/main/Industry_Annual_Co2.csv"
  },
  "params": [
    {
      "name": "minYear",
      "value": 1900,
      "bind": {
        "input": "range",
        "min": 1900,
        "max": 2000,
        "step": 1,
        "name": "Minimum year"
      }
    },
    {
      "name": "maxYear",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1920,
        "max": 2019,
        "step": 1,
        "name": "Maximum year"
      }
    }
  ],
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "year",
      "axis": {
        "format": "%Y",
        "grid": false,
        "tickCount": 7,
        "titleFontSize": 13
      },
      "title": "Year"
    },
    "y": {
      "aggregate": "sum",
      "field": "Co2 Emission",
      "title": "Co2 Emission",
      "axis": {
        "titleFontSize": 13
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "area",
        "line": {}
      },
      "transform": [
        {
          "filter": "year(datum.year)<=maxYear"
        },
        {
          "filter": "year(datum.year)>=minYear"
        }
      ],
      "encoding": {
        "color": {
          "field": "Type",
          "title": "Industry Name",
          "scale": {
            "range": [
              "#F25F5C",
              "#FFE066",
              "#247BA0",
              "#70C1B3"
            ]
          }
        },
        "tooltip": [
          {
            "field": "Co2 Emission",
            "type": "quantitative",
            "title": "Total C02 Emission"
          },
          {
            "timeUnit": "year",
            "field": "year",
            "title": "Year"
          },
          {
            "field": "Type",
            "type": "nominal",
            "title": "Industry"
          }
        ]
      }
    },
    {
      "layer": [
        {
          "mark": {
            "type": "point",
            "color": "black",
            "fill": "black"
          },
          "transform": [
            {
              "filter": "year(datum.year)==1910 || year(datum.year)==2010"
            },
            {
              "filter": "year(datum.year)<=maxYear"
            },
            {
              "filter": "year(datum.year)>=minYear"
            }
          ]
        },
        {
          "transform": [
            {
              "calculate": "'Total Co2 Emission: 12292'",
              "as": "text_annotation"
            },
            {
              "filter": "year(datum.year)==1910"
            },
            {
              "filter": "year(datum.year)<=maxYear"
            },
            {
              "filter": "year(datum.year)>=minYear"
            }
          ],
          "mark": {
            "type": "text",
            "align": "center",
            "dx": 40,
            "dy": -20
          },
          "encoding": {
            "text": {
              "field": "text_annotation"
            }
          }
        },
        {
          "transform": [
            {
              "calculate": "'Total Co2 Emission: 117903'",
              "as": "text_annotation"
            },
            {
              "filter": "year(datum.year)==2010"
            },
            {
              "filter": "year(datum.year)<=maxYear"
            },
            {
              "filter": "year(datum.year)>=minYear"
            }
          ],
          "mark": {
            "type": "text",
            "align": "right",
            "dx": -10
          },
          "encoding": {
            "text": {
              "field": "text_annotation"
            }
          }
        }
      ]
    }
  ]
}