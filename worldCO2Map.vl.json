{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World CO2 Emission per Capita (tonnes/person)",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Year_Selection",
      "value": 1949,
      "bind": {
        "input": "range",
        "min": 1949,
        "max": 2019,
        "step": 10,
        "name": "Year"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LongNHDoan/FIT3179-Homework-Week-9/main/customTopJSON.geo.json",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e5e5e5",
        "stroke": "grey",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/LongNHDoan/FIT3179-Homework-Week-9/main/co2-data.csv"
      },
      "transform": [
        {"filter": "year(datum.year) == Year_Selection"},
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/LongNHDoan/FIT3179-Homework-Week-9/main/customTopJSON.geo.json",
              "format": {"type": "topojson", "feature": "custom.geo"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {"calculate": "datum.co2_per_capita", "as": "CO2 Emission per Capita"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "CO2 Emission per Capita",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [3, 7, 12, 18, 26],
            "range": [
              "#fee5d9",
              "#fcbba1",
              "#fc9272",
              "#fb6a4a",
              "#de2d26",
              "#a50f15"
            ]
          }
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {
            "field": "co2_per_capita",
            "type": "quantitative",
            "title": "CO2 Emission"
          }
        ]
      }
    }
  ],
  "config": {}
}